        <!-- isotope.pkgd.min js -->
        <script src="/plugins/admin/isotope/jquery.stellar.min.js"></script>

        <!-- jquery.magnific-popup js -->
        <script src="/plugins/admin/isotope/jquery.magnific-popup.min.js"></script>

        <!-- isotope.pkgd.min js -->
        <script src="/plugins/admin/isotope/isotope.pkgd.min.js"></script>

        <!-- switchery -->
        <script src="/plugins/admin/quill/quill.js"></script>

        <!-- tagsinput -->
        <script src="/plugins/admin/touchspin/jquery.bootstrap-touchspin.min.js"></script>

        <!-- tagsinput -->
        <script src="/plugins/admin/bootstrap-tagsinput/bootstrap-tagsinput.min.js"></script>

        <!-- form elements -->
        <script src="/js/admin/pages/form-elements.js"></script>

        <!-- theme core scripts -->
        <script src="/js/admin/main.js"></script>

        <!-- all js include end -->
    </body>

