        <!-- axios cdn -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.3/axios.min.js"></script>

        <script>
            function searchL() {
                let va = document.getElementById("searchIc").value;
                axios
                    .post(`/search?val=${va}`)
                    .then((res) => {
                        console.log(res.data);
                        if (res.data) {
                            let html = "";
                            let productList = res.data;
                            for (let i = 0; i < productList.length; i++) {
                                html += `<div class="col-11 col-sm-6 col-xl-4 mb-1-9">
                                        <div class="product-grid">
                                            <div class="product-img">
                                                <a href="/productDetails?id=${productList[i]._id}">
                                                    <img src="${productList[i].productImages[0]}" alt="..."
                                                /></a>
                                            </div>
                                            <div class="product-description">
                                                <h3><a href="#">${productList[i].productName}</a></h3>
                                                <h4 class="price">
                                                    <span class="offer-price"
                                                        ><span class="a-price-symbol">$</span>${productList[i].price}</span
                                                    >
                                                </h4>
                                            </div>
                                            <div class="product-buttons">
                                                <ul class="ps-0">
                                                    <li>
                                                        <a
                                                            onclick="addtowishlist('${productList[i]._id}')"
                                                            class="btn-link"
                                                            title="Add To Wishlist"
                                                            ><i class="far fa-heart"></i
                                                        ></a>
                                                    </li>
                                                    <li>
                                                        <a
                                                            onclick="addtocartShop('${productList[i]._id}')"
                                                            class="butn-style2"
                                                            title="Add to Cart"
                                                            >Add to Cart</a
                                                        >
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>`;
                            }
                            document.getElementById("productlll").innerHTML = html;
                        }
                    })
                    .catch((err) => {
                        console.log(err);
                    });
            }
        </script>

        <!-- sweet alert cdn -->
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <!-- jQuery -->
        <script src="/js/user/jquery.min.js"></script>

