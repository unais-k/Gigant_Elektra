        <script>
            let ten = document.getElementById("ten");
            let zero = document.getElementById("zero");
            let twenty = document.getElementById("twenty");
            function charge(id) {
                let change = axios({
                    method: "post",
                    url: "/shipping_charge",
                    data: {
                        id,
                    },
                }).then((data) => {
                    document.getElementById("ship").innerHTML = `$${data.data.charge}.00`;
                    document.getElementById("total").innerHTML = `$${data.data.adding}.00`;
                });
            }

            function submit() {
                if (!ten.checked && !twenty.checked && !zero.checked) {
                    event.preventDefault();
                    Swal.fire({
                        icon: "error",
                        title: "Oops...",
                        text: "Please select one option",
                        showConfirmButton: false,
                        timer: 2000,
                    });
                }

