            <!-- CHECKOUT
        ================================================== -->
            <section class="md">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="process-steps mb-1-9 mb-lg-6">
                                <a class="step" href="/checkout"
                                    ><i class="fa-sharp fa-solid fa-location-dot pe-2"></i>
                                    <h4 class="step-title">1. Address</h4></a
