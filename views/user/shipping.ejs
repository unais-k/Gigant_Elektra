                        <!-- left pannel section -->
                        <div class="col-lg-9 col-md-12 ps-2-3 mb-1-9 mb-lg-0">
                            <div class="common-block">
                                <div class="inner-title">
                                    <h4 class="mb-0">Choose Shipping Method</h4>
                                </div>

                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th class="text-start">Shipping method</th>
                                                <th>Delivery time</th>
                                                <th>Handling fee</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="text-start"><span class="text-gray-dark">Fixed</span></td>
                                                <td>3 - 5 days</td>
                                                <td>$20.00</td>
                                                <td>
                                                    <div class="form-check">
                                                        <input
                                                            class="form-check-input"
                                                            onclick="charge(20)"
                                                            type="radio"
                                                            value="20"
                                                            name="shipping-method"
                                                            id="twenty"
                                                        />
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="text-start"><span class="text-gray-dark">Minimum Rate</span></td>
                                                <td>up to one week</td>
                                                <td>$10.00</td>
                                                <td>
                                                    <div class="form-check">
                                                        <input
                                                            class="form-check-input"
                                                            type="radio"
                                                            onclick="charge(10)"
                                                            value="10"
                                                            name="shipping-method"
                                                            id="ten"
                                                        />
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="text-start">
                                                    <span class="text-gray-dark">Free Delivery</span>
                                                </td>
                                                <td>up to two week</td>
                                                <td>$0.00</td>
                                                <td>
                                                    <div class="form-check">
                                                        <input
                                                            class="form-check-input"
                                                            onclick="charge(0)"
                                                            type="radio"
                                                            value="0"
                                                            name="shipping-method"
                                                            id="zero"
                                                        />
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                                <div class="buttons-set">
                                    <a href="/checkout" class="butn-style2 wide"
                                        ><i class="fas fa-arrow-left me-1"></i> Back</a
                                    >
                                    <a onclick="submit()" href="/payment" class="butn-style2 wide"
                                        >Continue <i class="fas fa-arrow-right ms-1"></i
                                    ></a>
                                </div>
                            </div>
                        </div>
                        <!-- end left pannel section -->

                        <!-- right pannel section -->
