        <!-- axios cdn -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.3/axios.min.js"></script>

        <!-- sweet alert cdn -->
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <script>
            function deleteItem(productId) {
                Swal.fire({
                    icon: "warning",
                    title: "Are you sure?",
                    text: "Product remove form wishlist!",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "remove",
                }).then((result) => {
                    if (result.isConfirmed) {
                        axios.delete(`/delete_wishlist?productId=${productId}`).then((result) => {
                            Swal.fire("removed!", "item has been removed.", "success").then((response) => {
                                location.reload();
                            });
                        });
                    }
                });
            }
            async function addtocart(id) {
                try {
                    let result = await axios({
                        method: "post",
                        url: "/add_to_cart_shop",
                        data: {
                            id,
                        },
                    });

                    if (result.data.response == "productExist") {
                        await Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: "Product already exist in cart",
                            showConfirmButton: false,
                            timer: 1000,
                        });
                    } else if (result.data.response == "outofstock") {
                        await Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: "Product Out of Stock",
                            showConfirmButton: false,
                            timer: 1000,
                        });
                    } else {
                        if (result.data.response == true) {
                            await Swal.fire({
                                icon: "success",
                                title: "done",
                                text: "Product added to cart",
                                showConfirmButton: false,
                                timer: 1500,
                            });
                        } else {
                            if (result.data.status == true) {
                                await Swal.fire({
                                    icon: "success",
                                    title: "done",
                                    text: "New product added",
                                    showConfirmButton: false,
                                    timer: 1000,
                                });
                            } else {
                                await Swal.fire({
                                    icon: "error",
                                    title: "Oops...",
                                    showConfirmButton: false,
                                    timer: 1000,
                                    text: "You have to login first",
                                });
                                location.href = "/login";
                            }
                        }
                    }
                } catch (error) {
                    console.log("eroor");
                }
            }
        </script>

